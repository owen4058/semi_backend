<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
	<resultMap id="memResult" type="member">
        <result property="useraccount" column="USERACCOUNT" />
        <result property="password" column="PASSWORD" />
        <result property="email" column="email"/>
        
	</resultMap> 
	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         select * from USERS order by joinDate desc	 	
      ]]>
	</select>
	
	<select id="loginById"  resultType="member"   parameterType="LoginForm" >
	<![CDATA[
		select * from USERS	
		where USERACCOUNT=#{useraccount}		
	]]>
  </select>
    
  <insert id="insertMember"  parameterType="member">
		<![CDATA[
		 insert into USERS
		 (userid,PASSWORD, USERACCOUNT, email)
		 values
		 (AAA.NEXTVAL, #{password}, #{useraccount}, #{email})
		]]>      
	</insert>
	
   
   <update id="updateMember"  parameterType="member">
     <![CDATA[
	     update USERS
	     set PASSWORD=#{password}, email=#{email}
	     where
	     USERACCOUNT=#{useraccount}
      ]]>      
   </update> 
     
   <delete id="deleteMember"  parameterType="String">
	<![CDATA[
	   delete from  USERS
	   where
	   USERACCOUNT=#{useraccount}
	]]>      
  </delete>
  
  <select id="validate"  resultType="idValidate"   parameterType="idValidate" >
	<![CDATA[
		select * from USERS	
		where USERACCOUNT=#{useraccount}		
	]]>
  </select>
  
</mapper>