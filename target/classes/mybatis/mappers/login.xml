<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.login">
	<resultMap id="memResult2" type="LoginForm">
		<result property="useraccount" column="USERACCOUNT" />
        <result property="password" column="PASSWORD" />
	</resultMap> 
	<!-- 
	<resultMap id="memResult" type="java.util.HashMap">
      <result property="id" column="id" />
      <result property="pwd" column="pwd" />
      <result property="name" column="name" />
      <result property="email" column="email" />
      <result property="joinDate" column="joinDate" />
   </resultMap> -->

  <select id="loginById"  resultType="LoginForm"   parameterType="LoginForm" >
	<![CDATA[
		select * from SEMIUSERS	
		where USERACCOUNT=#{useraccount} and PASSWORD=#{password}		
	]]>
  </select>
</mapper>